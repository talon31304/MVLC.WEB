            <a href="#" onmouseover="@("ToggleMissingDisplay("+Model.Column.ToString()+");" )">
                <img src="~/Content/Images/ExclamationMark.png" class="HoursStatusImage" />
            </a>
        </div>
        <div class="Big2Column HoursStatusActionBox ">
            <span class="ColorRed">Missing Hours  </span>
            <div onclick="DisplayDynamicPopupDiv(1);" class="HelpQuestionMark">?</div><br />
