@model MVLC.WEB.ViewModels.HoursColumnHead
@{ 
    string checkedText = "";
    string didClassMeet = "Y";
    string  MissingHoursAction = "UncheckMe(this); ToggleDidClassMeet(" + Model.Column + ",'" + Model.ClassDate + "');";
    if ( (ViewData["DatesClassDidNotMeet"] as IList<DateTime>).Contains(Model.ClassDate) )
    {
        didClassMeet = "N";
        checkedText = "checked";
    }


}

<input type="hidden" value="@didClassMeet" id="@("ColumnClassMet"  + Model.Column.ToString())" />


@*<div>@MissingHoursStatus</div>*@
<div class="MissingHours HoursStatus">

    <div class="Missing">
